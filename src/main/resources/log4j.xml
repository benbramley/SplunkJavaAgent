<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
    debug="false" >

    <appender name="ROLL" class="com.splunk.apache.log4j.DailyRollingFileAppender">
        
        <param name="file" value="splunkagent.log" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
     

    <layout class="com.splunk.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %c{1} %p - %m%n"/>
    </layout>
  </appender>

    <root>
        <appender-ref ref="ROLL" />
    </root>

</log4j:configuration>